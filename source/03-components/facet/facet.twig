{% set classes = [
  'c-facet',
  modifier_classes ? modifier_classes : ''
] %}

<div {{ add_attributes({ class: classes }) }}>
  <label for="{{ facet_id }}">
    {{ facet_label }}
    {% include '@components/icon/icon.twig' with {
      'icon_name': 'remove',
      'is_hidden': true,
      'modifier_classes': 'c-facet__icon'
    } %}
  </label>
  <input type="checkbox" class="c-facet__input" value="{{ facet_value }}" id="{{ facet_id }}" />
</div>

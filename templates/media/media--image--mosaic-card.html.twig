{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 * - url: aliased URL of media entity in string format
 *
 * @see template_preprocess_media()
 */
#}

{% set size_key = content.field_display_style|render|striptags|trim %}

{% if size_key == 'square' or size_key == 'one_col_tall' or size_key == 'short' %}
  {% set size_val = '1' %}
{% elseif size_key == 'wide' or size_key == 'wide_short' or size_key == 'large_square' %}
  {% set size_val = '2' %}
{% endif %}

{% set classes = [
  'c-topic-grid__item',
  'c-topic-grid__item--width' ~ size_val,
  content.field_research_area|field_value ? 'js-filter-' ~ content.field_research_area|render|striptags|trim : ''
] %}

{% set attributes = attributes.addClass(classes) %}
{% set view_mode = content.field_media_image.0['#view_mode'] %}

<div{{ attributes }}>
  {% include "@components/overlay-link/overlay-link.twig" with {
    'image': media.field_media_image|view(view_mode),
    'label': content.field_type|field_value is not empty ? content.field_type|field_value :'Image'|t,
    'kicker': content.field_type|field_value is not empty ? content.field_type|field_value : 'Image'|t,
    'title': content.field_long_text|field_value is not empty ? content.field_long_text : name,
    'link': content.field_boolean['#items'].value == 1 ? url : null,
    'attributes': false
  } %}
</div>

{# Uncomment the following if you donâ€™t render the content variable. #}
{% set catch_cache = content|render %}
